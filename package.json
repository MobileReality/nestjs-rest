    "@mikro-orm/cli": "^4.5.7",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/html-to-text": "^8.0.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^14.17.0",
    "@types/nodemailer": "^6.4.4",
